@model IEnumerable<Vidly.Models.Rental>

@{
    ViewBag.Title = "Index";
}

<h2>Rental Form</h2>

<p>
    @Html.ActionLink("Create New", "New","Rentals", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Book)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateRented)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateReturned)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <th>
                @Html.DisplayFor(modelItem => item.Customer.Name)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Book.Name)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.DateRented)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateReturned)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

